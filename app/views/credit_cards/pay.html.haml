= render 'layouts/header'
- breadcrumb :credit_cards
= render "layouts/breadcrumb"

%main.Mypage
  .Mypage__inner
    = render 'users/mypage_side'
    .Mypage__contents
      .Main__contents
        .Contents__header
          %h2 支払い方法
        .Contents__body
          .Contents--card
            %section.Card__info
              %p クレジットカードの登録が完了しました
              = link_to "マイページに戻る", mypage_path, class: "Btn"
              = link_to credit_cards_path, class: 'Btn' do
                = icon('far', 'credit-card')
                登録カード一覧
= render 'layouts/footer'

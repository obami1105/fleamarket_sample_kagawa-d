= render 'layouts/header' 
-# パンくずリスト：商品詳細ページ
- breadcrumb :item
= render "layouts/breadcrumb"

.Contents
  .Contents__Inner
    .Item
      %p.Item__Name
        =@item.name
      .Item__Images
        .Item__Images__Inner
          .Item__Image
            = image_tag 'pict2/ご飯.png', alt:'Item', class:"ItemIMG"
      .Item__Subimages
        .Item__Subimage
          = image_tag 'pict2/梅干し.jpeg', alt:'Item', class:"ItemSubIMG"
      .Item__Price
        %span.Item__Price__Price
          ="¥#{@item.price.to_s(:delimited)}"
        .Item__PriceTax
          %span (税込)
          %span
            - if @item.shipping_fee_payer == 1
              送料込
            - else
              送料別
      .Item__Status
        .Item__Status__Status
          売り切れました！
      .Item__Title
        =@item.introduction
      .Item__Tables
        %table.Item__Table
          %tbody.Item__TableBody
            %tr
              %th 出品者
              %td
                =@item.user.nickname
            %tr
              %th カテゴリー
              %td 
                =link_to "#" do
                  =@item.category.root.name
                %br 
                =link_to "#" do
                  =">#{@item.category.parent.name}"
                %br
                =link_to "#" do
                  =">#{@item.category.name}"
            %tr
              %th 商品の状態
              %td
                =@item.condition.name
            %tr
              %th 配送料の負担
              %td
                =@item.shipping_fee_payer.name
            %tr
              %th 発送元の地域
              %td
                =@item.prefecture.name
            %tr
              %th 発送日の目安
              %td
                =@item.preparation_day.name
      .OptionArea
        %ul.FavUl
          =link_to "#",class: "FavTag" do
            %li.Favolite
              = icon('fas', 'star')
              お気に入り
              %span.Counts 5
        %ul.FavUl
          =link_to "#",class: "FavTag" do
            %li.Report
              = icon('fa', 'flag')
              不適切な商品の通報
          
    .Comment
      %ul.CommentForm
      = form_with(url: "#", local: true, method: :post, class: "Form") do |f|
        =f.text_area :hoge ,class: "CommentText"
        %p.NoticeMsg 
          相手のことを考え丁寧なコメントを心がけましょう。
          %br
          不快な言葉遣いなどは利用制限や退会処分となることがあります。
          %br
        =button_tag type:"submit", class: "FormSendBtn" do
          = icon('fa', 'comment')
          コメントする

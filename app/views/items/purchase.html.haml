.user__all
  = render 'layouts/header_user'

  .Confirmation
    .Confirmation__SubField
      %h2.Caption 購入内容の確認
    .PurchaseField
      .Information
        .Information__group
          %figure.Information__item
            = image_tag @item.item_image.image_url.url , class:"Item__Img"
        .Information__text
          %p.Information__Field= @item.name
          %p.FeePrice
            %span.FeePrice__Fee 送料込（税込）
            %span.FeePrice__Price ¥#{@item.price}
    .PurchaseField
      .PaymentAmount
        %span 支払金額
        %span#PaymentPrice¥#{@item.price}
    .PurchaseField
      .PaymentMethod
        .PaymentMethod__text
          %h3 支払い方法
          - if @card_info.blank?
            = link_to new_credit_card_path do
              = icon('fa', 'plus-circle')
              クレジットカードを登録してください
          - else
            .RegistCard
              = icon('fas', 'check-circle')
              .RegistCard__Info
                %p #{@card_num}
                %p 有効期限 #{@exp_month + " / " + @exp_year}
                = image_tag "icon/#{@card_src}", class: "Card__brand--image", alt: @card_brand
    .PurchaseField
      .Address
        .Address__Field
          %h3
            配送先
          -# リンク先変更＊サーバーサイド実装後
          = link_to '変更する>', "#" , class: "AddressChange"
        .Address__Information
          %p 〒 #{@post_code}
          %p= @full_address
          %p= @user_fullname
    .CreditCardField
      - if @card_info.blank?
        カード情報を登録して下さい。
      - else
        = link_to buy_items_path, class: 'Btn', method: :post do
          購入
  = render 'layouts/footer_user'

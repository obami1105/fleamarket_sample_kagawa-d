-# ヘッダー変更する
= render 'layouts/header' 

.MainItem
  = form_with model: @Item, url: new_item_path, id: 'new_item', class: 'new_item', local: true do |f|
    .Item__contents
      %label.image 出品画像
      %span.required 必須
      %p.photo 最大5枚までアップロードできます
      .Image__box
        -# .Image__file
        .Image__field
          %label.Image__group
            .Image__box
              = icon('fa', 'camera', class: 'Image__icon')
              %p.pic クリックしてファイルをアップロード
    %hr.Line
    .Item__contents
      .Form__group
        %label.Item__name 商品名
        %span.required 必須
        %input.Form__inputText{"placeholder": "40文字まで", "type": "text"}
      .Form__group__second
        %label.Item__name 商品の説明
        %span.required 必須
        %textarea.Form__inputText__second{"placeholder": "商品の説明（必須1,000文字以内）
        （色、素材、重さ、定価、注意点など）
        例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。", "type": "text"}
      .Item__Bottom
        %span 0 /1000
    %hr.line
    .Item__contents 
      %p.box 商品の詳細
      .Item__category
        %label.category カテゴリー
        %span.required 必須
        %select.category__tag
      .Item__conditions
        %label.conditions 商品の状態
        %span.required 必須
        %select.conditions__tag
    %hr.line
    .Item__contents
    %hr.line
    .Item__contents
    %hr.line
    .Item__second__contents
    %hr.line
    .Item__second__contents
    %hr.line
-# ここから下のコードは仮置きです
.Fotter
  %b Fotter
